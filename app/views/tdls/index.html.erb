<div class="container">
<%= link_to new_tdl_path , :class => "navbar-btn btn btn-primary btn-sm" do %>
<i class "fa fa-plis fa-sm"></i>New
<% end %>
<table class="table"> 
  <thead>
    <tr>
      <th> todo </th>
      <th> isdone </th>
    </tr>
  </thead>

  <tbody>
    <% @tdls.each do |tdl| %>
    <tr> 
      <td style="word-break: break-all;"><%= tdl.todo %> </td>
      <td> <%= link_to isdone_tdl_path(tdl) , method: :post do %> 
      <% if tdl.isdone? %>
      <span class="glyphicon glyphicon-check" aria-hidden="true"></span> 
      <% else %>
      <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span> 
      <% end %>
      <% end %>
      </td>
      <td> <%= link_to edit_tdl_path(tdl) do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      <% end %> 
      </td>
      <td> <%= link_to tdl_path(tdl) , :method => :delete do%>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
